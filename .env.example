# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/ssv-prof

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ML Model Configuration
ML_MODEL_PATH=./models
PREDICTION_THRESHOLD=0.5

# Database Settings
DB_MAX_POOL_SIZE=10
DB_TIMEOUT_MS=5000

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log

# Clinical Data Integration (for production)
# CLINICAL_DB_HOST=your-clinical-db-host
# CLINICAL_DB_PORT=5432
# CLINICAL_DB_NAME=clinical_database
# CLINICAL_DB_USER=db_user
# CLINICAL_DB_PASSWORD=db_password

# External API Keys (if needed)
# EXTERNAL_API_KEY=your-api-key
# EXTERNAL_API_URL=https://api.example.com
